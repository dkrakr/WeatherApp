<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3fb5a1"
    tools:context="com.example.devikaraathor.weatherfinal.HomeScreen">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button">

    </ScrollView>


    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weather"
        android:layout_alignLeft="@+id/weather"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/weather"
        android:layout_alignStart="@+id/weather"
        android:layout_marginTop="40dp"
        android:background="#40E0D0"
        android:text="Request Location"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/scrollView2"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Coordinates:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <ImageButton
        android:id="@+id/weather"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_weather_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weather"
        android:layout_centerHorizontal="true"
        android:text="Click here for weather!"
        android:textColor="#FFFFFF" />

</RelativeLayout>
